# Staging Environment Configuration
# Copy this file to .env.staging and fill in your staging values

# Application
NEXT_PUBLIC_APP_URL=https://staging.management.orangejelly.co.uk
NODE_ENV=production

# Supabase (Staging Instance)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Twilio (Use Test Credentials)
TWILIO_ACCOUNT_SID=your-test-account-sid
TWILIO_AUTH_TOKEN=your-test-auth-token
TWILIO_PHONE_NUMBER=+15005550006  # Twilio test number
TWILIO_MESSAGING_SERVICE_SID=your-test-messaging-service-sid

# Contact Information
NEXT_PUBLIC_CONTACT_PHONE_NUMBER=01753682707

# Cron Jobs
CRON_SECRET_KEY=your-staging-cron-secret

# Skip Twilio Signature Validation (Staging Only)
SKIP_TWILIO_SIGNATURE_VALIDATION=true

# Redis/Upstash (Optional - for rate limiting)
UPSTASH_REDIS_REST_URL=https://your-staging-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-staging-redis-token

# Sentry (Optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your-staging-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=anchor-management-staging
SENTRY_AUTH_TOKEN=your-sentry-auth-token